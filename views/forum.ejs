<body>
    <header>
        <nav>
        <div class="logo">
            <a href="MM_Home.html"><img src=".JPG" alt="MindMatters Logo"></a>
        </div>
        <ul>
            <li><a href="About.html">About us</a></li>
            <li><a href="Services.html">Services</a></li>
            <li><a href="Download.html">Download</a></li>
            <li class="login"><a href="Login.html">Login</a></li>
        </ul>
    </nav>
</header>

    <div class="container">
    <div class="MindMatters">
        <h1 id="mm">GAME</h1>
        <h1 id="mm" style="margin-top: -50px;">FORUMS</h1>
        <h3 style="font-family: Sarabun, sans-serif; ;" >
            Here you can share your thoughts, feelings or ideas with other people. <br>
            You can also read other people's posts and comment on them. <br>
    </div>
    

    
    </div>
    <div class="forum">
        <% if (rows && rows.length > 0) { %>
            <% rows.forEach((row) => { %>
                <div class="post">
                    <h3><%= row.title %></h3>
                    <p><%= row.message %></p>
                    <form action="/deletepost" method="post">
                        <input type="hidden" name="postId" value="<%= row.id %>">
                        <button value="submit">Delete</button>
                    </form>
                    <form action="/updatepost" method="get">
                        <input type="hidden" name="postId" value="<%= row.id %>">
                        <button type="submit">Update</button>
                    </form>
                </div>
            <% }); %>
        <% } else { %>
            <p>No posts available</p>
        <% } %>
    </div>
    <div class="yourpost">
        <div class="card">
            <h2>Post Here!</h2>
            <form action="/forum" method="POST">
            <div class="row">
              <div class="col">
                <div class="form-group">
                  <label>Title</label>
                  <input type="text" id="title" name="title" required>
                </div>
              </div>
          
              <div class="col">
                <div class="form-group">
                  <label>Message</label>
                  <textarea id="message" name="message" required ></textarea>
                </div>
              </div>
          
              <div class="col">
                <input type="submit" value="Submit">
              </div>
            </div>
        </form>
          </div>
    </div>
</body>
</html>